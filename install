#!/usr/bin/env bash
#
# Super installation script

set -e

# --------------–-------–--------–--------–-------–--–-----
# OSX defaults
# --------------–-------–--------–--------–-------–--–-----

# Install osx defaults
./osx/defaults

# --------------–-------–--------–--------–-------–--–-----
# Vim Configuration
# --------------–-------–--------–--------–-------–--–-----

# Folder management
mv ~/.vim ~/.vim.backup
mv ~/.vimrc ~/.vimrc.backup
mkdir ~/.vim

# Install vim plugin manager
curl -fLo ~/.vim/autoload/plug.vim --create-dirs \
  "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"

# Create .vimrc
cp ~/.vim/vimrc ~/.vimrc
